{
    "compilerOptions": {
        "target": "ES3",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "sourceMap": true,
        "allowUnreachableCode": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}